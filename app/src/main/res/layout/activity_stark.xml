<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarkActivity">

    <ImageView
        android:id="@+id/starkImageView"
        android:layout_width="83dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stark"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/starkTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/starkImageView"
        android:text="House Stark"
         />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/starkTextView"
        android:id="@+id/starkRecycleView"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>