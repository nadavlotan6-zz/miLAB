<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nadavlotan.notificationapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/nba_l"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.ACTION_CREATE" />
                <action android:name="android.intent.action.ACTION_NOTIFY" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".NotificationIntentService"
            android:exported="false" />

        <receiver
            android:name=".NotificationReciever"
            android:enabled="true"
            android:exported="true"></receiver>

    </application>

</manifest>